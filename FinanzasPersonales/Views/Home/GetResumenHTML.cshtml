@model FinanzasPersonales.Models.User


<style>
    .myContainer {
        padding: 5%;
    }
</style>
<div class="myContainer">
    <div class="row col s12">
        <div class="progress">
            <div class="determinate" style="width: 70%"></div>
        </div>
    </div>

    <div class="row">
        <div class="col m4">
            <div class="card white">
                <div class="card-content white-text">
                    <p style="color:black;"> Pendiente </p>
                </div>
            </div>
        </div>
        <div class="col m4">
            <div class="card white">
                <div class="card-content white-text">
                    <p style="color:black;"> Pendiente </p>
                </div>
            </div>
        </div>

        <div class="col m4">
            <div class="card white">
                <div class="card-content white-text">
                    <p style="color:black;"> Pendiente </p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <h3>@ViewBag.Mes</h3>
    </div>
    <div class="row">
        <div class="col s12 m6">
            <div class="card accent-4" style="background-color:#89BF43">
                <div class="card-content white-text">
                    <br>
                    @{
                        decimal ingresos = 0;
                        foreach(var t in Model.Transaccion)
                        {
                            var Tmonth = t.Fecha != null ? t.Fecha.Value.ToString("MM") : "99";
                            var cmonth = DateTime.Now.ToString("MM");
                            if (Tmonth == DateTime.Now.ToString("MM"))
                            {
                                if (t.MontoIngreso != null) {
                                    ingresos += t.MontoIngreso.Value;
                                }
                            }

                        }

                        <span class="card-title">@String.Format("{0:C2}", ingresos)</span>
                        }
                    <p>Ingresos</p>
                    <br>
                    <p>@ViewBag.Mes @DateTime.Now.ToString("yyyy")  <p />
                </div>
            </div>
        </div>
        <div class="col s12 m6">
            <div class="card accent-4" style="background-color: #F44336">
                <div class="card-content white-text">
                    <br>
                    @{
                        decimal egresos = 0;
                        foreach (var t in Model.Transaccion)
                        {
                            var Tmonth = t.Fecha != null ? t.Fecha.Value.ToString("MM") : "99";
                            var cmonth = DateTime.Now.ToString("MM");
                            if (Tmonth == DateTime.Now.ToString("MM"))
                            {
                                if (t.MontoEgreso != null)
                                {
                                    egresos += t.MontoEgreso.Value;
                                }
                            }

                        }

                        <span class="card-title">@String.Format("{0:C2}", egresos)</span>
                    }
                    <p>Egresos</p>
                    <br>
                    <p>@ViewBag.Mes @DateTime.Now.ToString("yyyy")  <p />
                </div>
        </div>
    </div>
    <div class="row">
        <div class="col s11">
            <a href="#"><i class="small  material-icons" style="font-size:50px;color:#5a5a5a">navigate_before</i></a>
        </div>
        <a href="#"><i class="small  material-icons" style="font-size:50px;color:#5a5a5a">navigate_next</i></a>
    </div>
    <div class="card white col s12 m12">
        <div class="card-content white-text">
            <div class="card-title" style="color:black;">
                <div class="row">
                    <div class="col m7">
                        Gastos del mes
                    </div>
