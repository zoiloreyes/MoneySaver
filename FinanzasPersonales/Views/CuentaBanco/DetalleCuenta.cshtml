@model FinanzasPersonales.Models.CuentaBanco

@{

    ViewBag.Title = "DetalleCuenta";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";

}

<div>
    <h4>@Html.DisplayFor(model => model.NombreCuentaBanco)</h4>
    <p>@Html.DisplayFor(m => m.EstadoCuentaBanco.Estado)</p>

    <div class="sideContet">
        <div class="col s12 m12">
            <div class="card">
                <div class="card-content grey lighten-5">
                    <div class="row">
                        <div class="col s3">
                            <label>Balance</label>
                            <p>
                                @Html.DisplayFor(model => model.Moneda.Codigo)$: @Html.DisplayFor(model => model.BalanceInicial)
                            </p>
                        </div>
                        <div class="col s3">
                            <label>@Html.DisplayNameFor(model => model.Banco.NombreBanco)</label>
                            <p>@Html.DisplayFor(model => model.Banco.NombreBanco)</p>
                        </div>
                        <div class="col s3">
                            <label>@Html.DisplayNameFor(model => model.NumeroCuenta)</label>
                            <p>@Html.DisplayFor(model => model.NumeroCuenta)</p>
                        </div>
                        <div class="col s3">
                            <label>@Html.DisplayNameFor(model => model.FechaInicio)</label>
                            <p>@Html.DisplayFor(model => model.FechaInicio)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CuentaBancoID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
