<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MoneySaver</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/plugincss")
   <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
</head>

<body>
    <nav>
        <div class="nav-wrapper">
            <a href="@Url.Action("Index", "Home")" class="brand-logo"><img src="~/Content/img/MoneySaver.png" style="margin-left: 40px" width="60" height="60" alt="Logo" /></a>
            <ul class="left hide-on-med-and-down"></ul>

            @Html.Partial("_LoginPartial")
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li>@Html.ActionLink("Nosotros", "About", "Home")</li>
                <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
            </ul>
        </div>
    </nav>

    @Html.Partial("_MenuDashBoard")

    <style>.RenderBody{margin-left: 325px;}</style>
    <div class="RenderBody">
        @RenderBody()
    </div>

    <div class="container body-content RenderBody">        
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MoneySaver Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/materialize")
    @Scripts.Render("~/bundles/pluginjs")
    @Scripts.Render()
    @RenderSection("scripts", required: false)
</body>
</html>

